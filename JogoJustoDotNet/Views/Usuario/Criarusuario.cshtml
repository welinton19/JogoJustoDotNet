


@model JogoJustoDotNet.ViewModels.UsuarioViewModel

@{
	ViewData["Title"] = "Novo Usuario";
}
<!doctype htmll>
<html>
	<head>
	<meta charset="utf-8" />
	<title>@ViewData["Title"] - JogoJusto</title>
	</head>
<style>
    body {
        font-family: Arial, sans-serif;
        background: #f4f6f8;
    }

    .card-criar-usuario {
        width: 360px;
        margin: 80px auto;
        padding: 24px;
        background: #fff;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        border-radius: 8px;
    }

        .login-card h2 {
            margin: 0 0 16px;
        }

    .form-group {
        margin-bottom: 12px;
    }

    label {
        display: block;
        font-size: 14px;
        margin-bottom: 4px;
    }

    input[type="text"], input[type="password"] {
        width: 100%;
        padding: 8px 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    button {
        padding: 10px 16px;
        background: #0078d4;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .error {
        color: #c00;
        margin-bottom: 8px;
    }
</style>
<body>
	<h1>Novo Usuario</h1>
	<div class="card-criar-usuario">
        <form method="post" asp-action="criar" asp-controller="CriarUsuario">

			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Email"></label>
                <input asp-for="Email" class="form-gorup" type="text" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Password"></label>
                <input asp-for="Password" class="form-gorup" type="password" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Tipo"></label>
                <input asp-for="Tipo" class="form-gorup" type="text" />
				<span asp-validation-for="Tipo" class="text-danger"></span>
			</div>
			<button type="submit" asp-route="login">Cadastrar</button>
		</form>

	</div>
</body>
</html>
</doctype>