@model JogoJustoDotNet.ViewModels.FuncionarioCreatedViewModel

@{
    ViewData["Title"] = "Criar Funcionário";
}

<style>
    body{
        background: white;
    }
</style>

<h1>Novo Funcionário</h1>
<hr />

<form asp-action="Criar" asp-controller="Funcionario" method="post">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataNascimento"></label>
        <input asp-for="DataNascimento" type="date" class="form-control" />
        <span asp-validation-for="DataNascimento" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Genero"></label>
        <input asp-for="Genero" class="form-control" />
        <span asp-validation-for="Genero" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cargo"></label>
        <input asp-for="Cargo" class="form-control" />
        <span asp-validation-for="Cargo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataContratacao"></label>
        <input asp-for="DataContratacao" type="date" class="form-control" />
        <span asp-validation-for="DataContratacao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Raca"></label>
        <input asp-for="Raca" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="StPcd"></label>
        <input asp-for="StPcd" type="checkbox" />
    </div>

    <div class="form-group">
        <label asp-for="TipoPcd"></label>
        <input asp-for="TipoPcd" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Cpf"></label>
        <input asp-for="Cpf" class="form-control" />
        <span asp-validation-for="Cpf" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CargaHoraria"></label>
        <input asp-for="CargaHoraria" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DescricaoCargaHoraria"></label>
        <input asp-for="DescricaoCargaHoraria" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Salario"></label>
        <input asp-for="Salario" class="form-control" />
        <span asp-validation-for="Salario" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Departamento"></label>
        <input asp-for="Departamento" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Desenvolvimentos"></label>
        <input asp-for="Desenvolvimentos" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Cadastrar</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>
